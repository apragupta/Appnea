<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_opening_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.apra.apraclock.OpeningScreen">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swEnable"
        android:layout_alignBaseline="@+id/tvTime"
        android:layout_alignBottom="@+id/tvTime"
        android:layout_alignParentEnd="true"
        android:textSize="30sp" />

    <Button
        android:text="Sleep Now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:id="@+id/btnSleepnow"
        android:background="@color/colorPrimary"
        android:onClick="sleepNow"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/swEnable"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Sleep Later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/BtnSleep"
        android:background="@color/colorPrimary"
        android:onClick="sleepLater"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/btnSleepnow"
        android:layout_alignParentStart="true" />

    <Button
        android:text="I know when to wakeup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/BtnCustomAlarm"
        android:background="@color/colorPrimary"
        android:onClick="iKnowWhenTowakeup"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:layout_below="@+id/BtnSleep"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTime"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />


</RelativeLayout>
